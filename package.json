{
    "name": "@purinton/tagit",
    "type": "module",
    "version": "1.0.7",
    "description": "Automated version management and Git operations for Node.js and PHP projects.",
    "main": "tagit.mjs",
    "scripts": {
        "start": "node tagit.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent",
        "build": "pkg tagit.mjs --targets node18-linux-x64 --output tagit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/tagit.git"
    },
    "keywords": [
        "tagit",
        "versioning",
        "git",
        "automation",
        "nodejs",
        "composer",
        "package.json",
        "composer.json",
        "release",
        "cli"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/tagit/issues"
    },
    "homepage": "https://github.com/purinton/tagit#readme",
    "devDependencies": {
        "jest": "^30.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.17",
        "dotenv": "^17.2.0"
    },
    "pkg": {
        "scripts": [
            "src/**/*.mjs"
        ],
        "assets": [],
        "targets": [
            "node18-linux-x64"
        ]
    }
}