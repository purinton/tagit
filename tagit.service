[Unit]
Description=tagit
After=network-online.target
Wants=network-online.target
StartLimitBurst=3
StartLimitIntervalSec=60

[Service]
User=root
Group=root
RestartSec=5
Restart=on-failure
WorkingDirectory=/opt/tagit
ExecStart=/opt/tagit/tagit.mjs
EnvironmentFile=/opt/tagit/.env

[Install]
WantedBy=multi-user.target
